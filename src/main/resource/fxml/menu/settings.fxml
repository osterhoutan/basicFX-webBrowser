<!-- Sub Scene Graph -->

<Tab fx:id="tab" text="⚙" 
    xmlns="http://javafx.com/javafx/8.0.171" 
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="basicfx_webbrowser.control.menu.SettingsController">
    <content>


        <VBox fx:id="tabRoot" styleClass="menu-pane">
            <children>
                <Label styleClass="h1" text="⚙ Settings:" />
                <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="20.0" prefWidth="200.0">
                    <items>
                        <Button fx:id="btnSave" onAction="#saveChanges" text="✔">
                            <tooltip>
                                <Tooltip text="Save" />
                            </tooltip>
                        </Button>
                        <Button fx:id="btnCancel" onAction="#cancelChanges" text="✘">
                            <tooltip>
                                <Tooltip text="Cancel" />
                            </tooltip>
                        </Button>
                    </items>
                </ToolBar>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" style="-fx-background-color: none;">
                    <content>
                        <VBox>
                            <children>
                                <TitledPane layoutX="18.0" layoutY="26.0" styleClass="h2" text="General:">
                                    <content>
                                        <VBox styleClass="h3" fx:id="generalSettingsPane">
                                            <children>
                                                <CheckBox fx:id="chkResumeSession" mnemonicParsing="false" text="(TBI) Resume Session After Close" />
                                                <Label styleClass="h2" text="Open New Tab on:" />
                                                <RadioButton fx:id="rdoUseNewTab" mnemonicParsing="false" selected="true" text="New Tab Screen" />
                                                <RadioButton fx:id="rdoUseHomePage" mnemonicParsing="false" text="A Home Page:" />
                                                <TextField fx:id="homePageField" disable="true" promptText="Home Page URL" text="https://www.google.com" />
                                                <Label fx:id="lblBadHomeUrl" text="" styleClass="message"/>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                <TitledPane styleClass="h2" text="Theme:" VBox.vgrow="NEVER">
                                    <VBox.margin>
                                        <Insets bottom="8.0" top="8.0" />
                                    </VBox.margin>
                                    <content>
                                        <VBox>
                                            <children>
                                                <HBox fillHeight="false" styleClass="h3">
                                                    <children>
                                                        <Label text="Theme: ">
                                                            <HBox.margin>
                                                                <Insets right="4.0" />
                                                            </HBox.margin>
                                                        </Label>
                                                        <ChoiceBox fx:id="chsBxTheme" prefWidth="150.0" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="center" fillHeight="false" styleClass="message">
                                                    <children>
                                                        <Label text="Restarting the web browser required to load new theme" wrapText="true" styleClass="message" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                                <TitledPane styleClass="h2" text="Search Engine:">
                                    <content>
                                        <VBox styleClass="h3">
                                            <children>
                                                <HBox fillHeight="false" styleClass="h3">
                                                    <children>
                                                        <Label text="Default: ">
                                                            <HBox.margin>
                                                                <Insets right="4.0" />
                                                            </HBox.margin>
                                                        </Label>
                                                        <ChoiceBox fx:id="chsBxSearchEngine" prefWidth="150.0" />
                                                    </children>
                                                </HBox>
                                                <TitledPane animated="true" disable="false" expanded="false" text="Custom:">
                                                    <content>
                                                        <GridPane styleClass="h3">
                                                            <columnConstraints>
                                                                <ColumnConstraints />
                                                                <ColumnConstraints />
                                                            </columnConstraints>
                                                            <rowConstraints>
                                                                <RowConstraints />
                                                                <RowConstraints />
                                                                <RowConstraints />
                                                            </rowConstraints>
                                                            <children>
                                                                <!-- <Label styleClass="h3" text=" Name: " GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                                                                    <padding>
                                                                        <Insets right="4.0" />
                                                                    </padding>
                                                                </Label>
                                                                <TextField fx:id="nameField" promptText="Search Engine Name" styleClass="h3" GridPane.columnIndex="1" /> -->
                                                                <Label styleClass="h3" text="Header: " GridPane.rowIndex="0">
                                                                    <tooltip>
                                                                        <Tooltip text="This is the string of text (all lowercase w/':') that you can use to query your desired search engine from the Omnibar of your browser" />
                                                                    </tooltip>
                                                                    <padding>
                                                                        <Insets right="4.0" />
                                                                    </padding>
                                                                </Label>
                                                                <TextField fx:id="headerField" promptText="Search Header" styleClass="h3" GridPane.columnIndex="1" GridPane.rowIndex="0" >
                                                                    <tooltip>
                                                                        <Tooltip text="This is the string of text (all lowercase w/':') that you can use to query your desired search engine from the Omnibar of your browser" />
                                                                    </tooltip>
                                                                </TextField>
                                                                <Label styleClass="h3" text="Query URL: " GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                                                                    <tooltip>
                                                                        <Tooltip text="This is the Query URL of your chosen Search engine, where the location for the general search sting to be inserted is marked by a &quot;%s&quot;" />
                                                                    </tooltip>
                                                                    <GridPane.margin>
                                                                        <Insets />
                                                                    </GridPane.margin>
                                                                    <padding>
                                                                        <Insets right="4.0" />
                                                                    </padding>
                                                                </Label>
                                                                <TextField fx:id="urlField" promptText="Query URL (with %s where query should be inserted)" styleClass="h3" GridPane.columnIndex="1" GridPane.rowIndex="2" >
                                                                    <tooltip>
                                                                        <Tooltip text="This is the Query URL of your chosen Search engine, where the location for the general search sting to be inserted is marked by a &quot;%s&quot;" />
                                                                    </tooltip>
                                                                </TextField>
                                                                 <Label text=""  fx:id="lblBadHeader"  styleClass="message" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM" />
                                                                 <Label text=""  fx:id="lblBadQueryURL" styleClass="message" wrapText="true" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM" />
                                                                
                                                            </children>
                                                        </GridPane>
                                                    </content>
                                                    <VBox.margin>
                                                        <Insets bottom="-4.0" left="-4.0" right="-4.0" top="-4.0" />
                                                    </VBox.margin>
                                                    <padding>
                                                        <Insets top="12.0" />
                                                    </padding>
                                                </TitledPane>
                                            </children>
                                        </VBox>
                                    </content>
                                </TitledPane>
                            </children>
                            <padding>
                                <Insets bottom="16.0" left="8.0" right="8.0" top="8.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
            <stylesheets>
                <URL value="@../main.css" />
                <URL value="@menu.css" />
            </stylesheets>
            <padding>
                <Insets top="8.0" />
            </padding>
        </VBox>

    </content>
</Tab>
